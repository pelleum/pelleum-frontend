{
    "expo": {
        "name": "Pelleum",
        "slug": "pelleum-frontend",
        "scheme": "pelleum",
        "version": "1.0.4",
        "orientation": "portrait",
        "icon": "./assets/prod-icon.png",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#000000"
        },
        "updates": {
            "enabled": true,
            "fallbackToCacheTimeout": 10000
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.pelleum.mobile",
            "buildNumber": "6",
            "appStoreUrl": "https://apps.apple.com/us/app/pelleum/id1614359541",
            "infoPlist": {
                "NSFaceIDUsageDescription": "Pelleum gives users the option to securely log in with Face ID or Touch ID."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/prod-adaptive-icon.png",
                "backgroundColor": "#000000"
            },
            "softwareKeyboardLayoutMode": "pan",
            "permissions": [
                "ACCESS_NETWORK_STATE",
                "USE_BIOMETRIC",
                "USE_FINGERPRINT"
            ],
            "package": "com.pelleum.mobile",
            "versionCode": 6,
            "playStoreUrl": "https://play.google.com/store/apps/details?id=com.pelleum.mobile"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "userInterfaceStyle": "automatic",
        "androidStatusBar": {
            "barStyle": "light-content"
        }
    }
}